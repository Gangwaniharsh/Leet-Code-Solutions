class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int ans=0,length;
        unordered_set<int>s(nums.begin(),nums.end());
        for(int x:s){
            if(s.count(x-1)==0){
                int curr=x;
                length=1;
                while(s.count(curr+1)){
                    curr++;
                    length++;
                }
                ans=max(ans,length);
            }
        }
        return ans;
    }
};
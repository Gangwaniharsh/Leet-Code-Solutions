class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int pref=0;
        unordered_map<int,int>mp;
        mp[0]=1;
        int count=0,mod;
        for(int j=0;j<nums.size();j++){
            pref=pref+nums[j];
            mod=pref%k;
            if(mod<0) mod+=k;
           
               
                count+=mp[mod];
                 mp[mod]++;
            
        }
        return count;
    }
};
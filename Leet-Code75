class Solution {
public:
    void sortColors(vector<int>& nums) {
        int low=0,high=nums.size()-1,i=0;
        while(i<=high){
            if(nums[i]<1){
                swap(nums[low],nums[i]);
                low++;
                i++;
            }
            else if(nums[i]>1){
                swap(nums[high],nums[i]);
                high--;
            }
            else{
                i++;
            }
        }
    }
};